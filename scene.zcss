/* Custom 3D Graphics Sheet */

#hero-explosion {
    renderer: volca-gpu;
    geometry: url('/assets/tank_model.glb');
    
    /* The 1 million particle system */
    spawn-rate: 1000000;
    
    /* Custom Physics parameters */
    physics-gravity: -9.8;
    physics-turbulence: 0.5;
    
    /* Aesthetics */
    blend-mode: additive;
    color-start: #ff0000; /* Red */
    color-end: #ffff00;   /* Yellow */
}

.environment-fog {
    density: 0.05;
    color: #1a1a1a;
}
